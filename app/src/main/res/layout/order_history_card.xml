<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_history_card"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/order_history_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#19520646"
            android:textSize="16sp"
            android:textColor="@color/orange_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/order_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasta with beef"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/order_history_id"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/order_history_cost_and_amout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$9.20 â€¢ 1 item"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/order_history_title"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/order_history_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11, May"
            android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/order_history_cost_and_amout"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_back"
            android:rotation="180"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="@color/orange_main" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>