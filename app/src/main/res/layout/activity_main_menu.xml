<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plain_white"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shoppingCart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_cart"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="20sp"
        android:layout_gravity="bottom|right"
        app:backgroundTint="@color/orange_main"
        app:maxImageSize="30dp"
        app:tint="@color/white"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_app_bar"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_navbottombar"
        app:itemTextColor="@color/orange_main"
        app:itemIconTint="@color/icon_color_bottomnavbar"
        app:menu="@menu/bottom_app_bar" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>